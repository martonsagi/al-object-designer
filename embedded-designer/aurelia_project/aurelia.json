{
    "name": "object-designer",
    "type": "project:application",
    "bundler": {
        "id": "cli",
        "displayName": "Aurelia-CLI"
    },
    "build": {
        "targets": [
            {
                "id": "web",
                "displayName": "Web",
                "port": 9000,
                "index": "index.html",
                "baseDir": ".",
                "output": "scripts"
            }
        ],
        "options": {
            "minify": "stage & prod",
            "sourcemaps": "dev & stage",
            "rev": false,
            "cache": "dev & stage"
        },
        "bundles": [
            {
                "name": "vendor-bundle.js",
                "prepend": [
                    "node_modules/bluebird/js/browser/bluebird.core.js",
                    {
                        "path": "node_modules/aurelia-cli/lib/resources/scripts/configure-bluebird-no-long-stacktraces.js",
                        "env": "stage & prod"
                    },
                    {
                        "path": "node_modules/aurelia-cli/lib/resources/scripts/configure-bluebird.js",
                        "env": "dev"
                    },
                    "node_modules/@babel/polyfill/browser.js",
                    "node_modules/requirejs/require.js"
                ],
                "source": [
                    "**/*.{js,json,css,html}"
                ],
                "dependencies": [
                    "lodash",
                    {
                        "name": "thenby",
                        "path": "../node_modules/thenby",
                        "main": "thenBy.module"
                    },
                    "numeral",
                    {
                        "name": "kramed",
                        "path": "../node_modules/kramed/lib",
                        "main": "kramed"
                    },
                    {
                        "name": "moment",
                        "path": "../node_modules/moment",
                        "main": "moment"
                    },
                    "aurelia-bootstrapper",
                    "aurelia-loader-default",
                    "aurelia-pal-browser",
                    {
                        "name": "aurelia-testing",
                        "env": "dev"
                    },
                    "text",
                    {
                        "name": "sortablejs",
                        "path": "../node_modules/sortablejs/",
                        "main": "sortable"
                    },
                    {
                        "name": "aurelia-sortablejs",
                        "path": "../node_modules/aurelia-sortablejs/dist/amd",
                        "main": "index"
                    },
                    {
                        "name": "aurelia-ui-framework",
                        "path": "../node_modules/aurelia-ui-framework/dist/amd",
                        "main": "aurelia-ui-framework"
                    },
                    {
                        "name": "ag-grid-community",
                        "path": "../node_modules/ag-grid-community",
                        "main": "main",
                        "resources": [
                            "dist/styles/ag-grid.css",
                            "dist/styles/ag-theme-material.css"
                        ]
                    },
                    {
                        "name": "ag-grid-aurelia",
                        "path": "../node_modules/ag-grid-aurelia",
                        "main": "main"
                    }
                ]
            }
        ],
        "copyFiles": {
            "./scripts/*": "../extension-al-object-designer/designer/scripts",
            "index.html": "../extension-al-object-designer/designer"
        },
        "loader": {
            "type": "require",
            "configTarget": "vendor-bundle.js",
            "includeBundleMetadataInConfig": "auto",
            "plugins": [
                {
                    "name": "text",
                    "extensions": [
                        ".html",
                        ".css"
                    ],
                    "stub": true
                }
            ]
        }
    },
    "platform": {
        "id": "web",
        "displayName": "Web",
        "port": 9000,
        "index": "index.html",
        "baseDir": ".",
        "output": "scripts"
    },
    "transpiler": {
        "id": "typescript",
        "displayName": "TypeScript",
        "fileExtension": ".ts",
        "dtsSource": [
            "./custom_typings/**/*.d.ts",
            "./node_modules/aurelia-ui-framework/dist/typings/**/*.d.ts"
        ],
        "source": "src/**/*.ts"
    },
    "markupProcessor": {
        "id": "none",
        "displayName": "None",
        "fileExtension": ".html",
        "source": "src/**/*.html"
    },
    "cssProcessor": {
        "id": "none",
        "displayName": "None",
        "fileExtension": ".css",
        "source": "src/**/*.css"
    },
    "jsonProcessor": {
        "id": "none",
        "displayName": "None",
        "fileExtension": ".json",
        "source": "src/**/*.json"
    },
    "editor": {
        "id": "vscode",
        "displayName": "Visual Studio Code"
    },
    "unitTestRunners": [
        {
            "id": "none",
            "displayName": "None"
        }
    ],
    "integrationTestRunner": {
        "id": "none",
        "displayName": "None"
    },
    "paths": {
        "root": "src",
        "resources": "resources",
        "elements": "resources/elements",
        "attributes": "resources/attributes",
        "valueConverters": "resources/value-converters",
        "bindingBehaviors": "resources/binding-behaviors"
    },
    "packageManager": "npm"
}